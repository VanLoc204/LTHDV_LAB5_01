<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Quản lý Suppliers</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 20px;
      background-color: #f9f9f9;
      color: #333;
    }
    h1 {
      color: #2c3e50;
      margin-bottom: 20px;
    }
    table {
      width: 100%;
      border-collapse: collapse;
      margin-bottom: 20px;
    }
    th, td {
      padding: 10px;
      text-align: left;
      border-bottom: 1px solid #ddd;
    }
    th {
      background-color: #f2f2f2;
    }
    a {
      text-decoration: none;
      color: #2980b9;
    }
    a:hover {
      text-decoration: underline;
    }
    button {
      background-color: #e74c3c;
      color: white;
      border: none;
      padding: 5px 10px;
      cursor: pointer;
    }
    button:hover {
      background-color: #c0392b;
    }
    form {
      margin-bottom: 20px;
    }
    input {
      padding: 8px;
      margin: 5px;
    }
    .add-form {
      background-color: #ecf0f1;
      padding: 15px;
      border-radius: 5px;
    }
  </style>
</head>
<body>
  <h1>Quản lý Suppliers</h1>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Address</th>
        <th>Phone</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% suppliers.forEach(supplier => { %>
        <tr>
          <td><%= supplier.name %></td>
          <td><%= supplier.address %></td>
          <td><%= supplier.phone %></td>
          <td>
            <a href="/suppliers/<%= supplier._id %>/edit">Edit</a> | 
            <form action="/suppliers/<%= supplier._id %>?_method=DELETE" method="POST" style="display:inline;">
              <button type="submit" onclick="return confirm('Are you sure you want to delete this supplier?');">Delete</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
  <div class="add-form">
    <h2>Thêm Supplier mới</h2>
    <form action="/suppliers" method="POST">
      <input name="name" placeholder="Name" required />
      <input name="address" placeholder="Address" />
      <input name="phone" placeholder="Phone" />
      <button type="submit">Add</button>
    </form>
  </div>
  <a href="/">Back to Home</a>
</body>
</html>
